<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/selected_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/let_do_image_2" />

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/back_navigate" />

        <TextView
            android:id="@+id/activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected_image"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="GO FOR A WALK"
            android:textColor="#230051"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:text="10 MIN."
            android:textColor="#230051"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/regular_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_type"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="You are regular in your walks!"
            android:textColor="#230051"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/concern_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regular_text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="We are happy to see that"
            android:textColor="#ad40ff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/concern_text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/graph"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/begin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/graph2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/feli_button"
            android:text="Begin!"
            android:textAllCaps="false"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/begin"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Other activities for you"
            android:textColor="#230051"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/busy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/other_text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:text="Always keep yourself busy!"
            android:textColor="#ad40ff"
            android:textSize="14sp" />

    </RelativeLayout>
</ScrollView>